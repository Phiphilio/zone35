{
  "manifest_version": 3,
  "name": "Zone35",
  "version": "1.0",
  "description": "Une extension Chrome qui sert de minuteur avec stockage persistant.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "popup/assets/zone35_icon.png",
      "48": "popup/assets/zone35_icon.png",
      "128": "popup/assets/zone35_icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "popup/assets/zone35_icon.png",
    "48": "popup/assets/zone35_icon.png",
    "128": "popup/assets/zone35_icon.png"
  }
}
